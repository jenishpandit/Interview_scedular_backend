  "components": {
    "securitySchemes": {
      "JWT": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AuthBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "faizan2@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "CandidateBody": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "String",
            "required": true,
            "example": "Vegeta"
          },
          "last_name": {
            "type": "String",
            "required": true,
            "example": "Saiyan"
          },
          "email": {
            "type": "String",
            "required": true,
            "unique": true,
            "example": "example@gmail.com"
          },
          "phone_number": {
            "type": "String",
            "required": true,
            "example": "12345"
          },
          "technology_id": {
            "type": "string",
            "required": true,
            "example": "ObjectId"
          },
          "type": {
            "type": "String",
            "required": true,
            "example": "WFH"
          },
          "resume": {
            "type": "String",
            "required": true,
            "example": "image"
          }
        }
      },
      "TechnologyBody": {
        "type": "object",
        "properties": {
